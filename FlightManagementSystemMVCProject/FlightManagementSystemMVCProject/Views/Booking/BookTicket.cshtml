@model FlightManagementSystemMVCProject.Models.Bookings

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>BookTicket</title>
    <link href="~/css/BookingStyle.css" rel="stylesheet" />
</head>
<body>
    
    <div class="LoginBox">
        <h2>Booking Details</h2>
        <div class="row">
            <div class="col-md-4">
                <form asp-action="BookTicket">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                    <div class="form-group">
                        <label asp-for="NoOfSeats" class="control-label"></label>
                        <input asp-for="NoOfSeats" class="form-control" id="input" />
                        <span asp-validation-for="NoOfSeats" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="submit" value="Book" class="btn btn-primary" id="submitButton" />
                    </div>
                </form>
            </div>
        </div>
        <br />
        <div id="navlink">
            <a asp-action="ChooseLocation">Back to Homepage</a>
        </div>
        <br />

    </div>


</body>
</html>
