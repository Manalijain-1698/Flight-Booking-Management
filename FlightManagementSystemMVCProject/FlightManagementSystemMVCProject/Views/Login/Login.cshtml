@model FlightManagementSystemMVCProject.Models.Userdetails

@{
    Layout = null;
}


<link href="~/css/LoginStyleSheet.css" rel="stylesheet" />
<body>
    
    <div class="LoginBox">
        @using (Html.BeginForm("Login", "Login", FormMethod.Post))
        {
            <h4 style="text-align:center; padding-top:10px;"><b>Flight Booking Management System</b></h4>

            <h3 style="text-align:center;">Login</h3>
            
            <div class="row">
                <div style="width:100%">
                    <form asp-action="Login">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Username" class="control-label"></label>
                            <input asp-for="Username" class="form-control" required type="text" />
                            <br />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" class="form-control" required type="password" />
                            <br />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="g-recaptcha" data-sitekey="6Lcs0LIaAAAAALXQUqKLRlxenIr07iFoRwTlUnrk" style="margin-left:1px; text-align:center; margin-right:1px;"></div>
                        <br />
                        <div class="form-group">
                            <input type="submit" value="Login" class="btn btn-primary" id="submitButton" />

                        </div>
                    </form>
                </div>
            </div>
        }
        <p style="color:red;font-size:15px;">
            @ViewBag.message
            @TempData.Peek("ErrorMessage")
        </p>
        <div>
            @Html.ActionLink("clear", "Login")
        </div>


        <script src='https://www.google.com/recaptcha/api.js' type="text/javascript"></script>
    </div>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}